      <div>
        <div class="text-5xl font-bold mb-2"><%= t.track3_value %></div>
        <div class="text-lg opacity-90"><%= t.track3_label %></div>
      </div>
      <div>
        <div class="text-5xl font-bold mb-2"><%= t.track4_value %></div>
        <div class="text-lg opacity-90"><%= t.track4_label %></div>
      </div>
    </div>
  </div>
</section>

