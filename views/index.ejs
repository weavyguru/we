      </div>

      <!-- Business Operations -->
      <div class="card bg-white p-8 rounded-xl border border-gray-200">
        <div class="icon-circle bg-orange-100">
          <i class="fas fa-building text-orange-500 text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold mb-3"><%= t.service5_title %></h3>
        <p class="text-gray-600">
          <%= t.service5_desc %>
        </p>
      </div>

      <!-- Exit Preparation -->
      <div class="card bg-white p-8 rounded-xl border border-gray-200">
        <div class="icon-circle bg-pink-100">
          <i class="fas fa-handshake text-pink-500 text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold mb-3"><%= t.service6_title %></h3>
        <p class="text-gray-600">
          <%= t.service6_desc %>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Proven Track Record -->
<section class="gradient-bg py-20 text-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4"><%= t.track_title %></h2>
      <p class="text-lg opacity-90 max-w-2xl mx-auto">
