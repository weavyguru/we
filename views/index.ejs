        <%= t.partnership_subtitle %>
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Technical Development -->
      <div class="card bg-white p-8 rounded-xl border border-gray-200">
        <div class="icon-circle bg-purple-100">
          <i class="fas fa-code text-purple-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold mb-3"><%= t.service1_title %></h3>
