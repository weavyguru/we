<!-- Hero Section -->
<section class="container mx-auto px-6 py-20 text-center">
  <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-4">
    <%= t.hero_title %>
    <br>
    <span class="gradient-text"><%= t.hero_together %></span>
  </h1>

  <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-8">
    <%= t.hero_subtitle %>
  </p>

  <div class="flex justify-center">
    <a href="/<%= lang !== 'en' ? lang + '/' : '' %>survey" class="gradient-bg text-white px-8 py-3 rounded hover:opacity-90 transition flex items-center gap-2">
      <%= t.hero_cta %>
      <i class="fas fa-arrow-right"></i>
    </a>
  </div>
</section>

<!-- Three Feature Cards -->
<section class="container mx-auto px-6 py-16">
  <div class="grid md:grid-cols-3 gap-8">
    <!-- Extreme Speed -->
    <div class="card bg-white p-8 rounded-xl border border-gray-200 text-center">
      <div class="icon-circle bg-purple-100">
        <i class="fas fa-bolt text-purple-600 text-2xl"></i>
      </div>
      <h3 class="text-xl font-semibold mb-2"><%= t.feature1_title %></h3>
      <p class="text-gray-600"><%= t.feature1_desc %></p>
    </div>

    <!-- Proven Process -->
    <div class="card bg-white p-8 rounded-xl border border-gray-200 text-center">
      <div class="icon-circle bg-orange-100">
        <i class="fas fa-cog text-orange-500 text-2xl"></i>
      </div>
      <h3 class="text-xl font-semibold mb-2"><%= t.feature2_title %></h3>
      <p class="text-gray-600"><%= t.feature2_desc %></p>
    </div>

    <!-- Scale & Exit -->
    <div class="card bg-white p-8 rounded-xl border border-gray-200 text-center">
      <div class="icon-circle bg-pink-100">
        <i class="fas fa-chart-line text-pink-500 text-2xl"></i>
      </div>
      <h3 class="text-xl font-semibold mb-2"><%= t.feature3_title %></h3>
      <p class="text-gray-600"><%= t.feature3_desc %></p>
    </div>
  </div>
</section>

<!-- Our Proven Process -->
<section id="process" class="bg-gray-50 py-20">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4"><%= t.process_title %></h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        <%= t.process_subtitle %>
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Phase 1 -->
      <div class="card bg-white p-8 rounded-xl text-center">
        <div class="icon-circle bg-purple-100">
          <i class="fas fa-search text-purple-600 text-2xl"></i>
        </div>
        <div class="text-sm text-purple-600 font-semibold mb-2"><%= t.phase1_label %></div>
        <h3 class="text-xl font-semibold mb-3"><%= t.phase1_title %></h3>
        <p class="text-gray-600 text-sm">
          <%= t.phase1_desc %>
        </p>
      </div>

      <!-- Phase 2 -->
      <div class="card bg-white p-8 rounded-xl text-center">
        <div class="icon-circle bg-purple-100">
          <i class="fas fa-lightbulb text-purple-600 text-2xl"></i>
        </div>
        <div class="text-sm text-purple-600 font-semibold mb-2"><%= t.phase2_label %></div>
        <h3 class="text-xl font-semibold mb-3"><%= t.phase2_title %></h3>
        <p class="text-gray-600 text-sm">
          <%= t.phase2_desc %>
        </p>
      </div>

      <!-- Phase 3 -->
      <div class="card bg-white p-8 rounded-xl text-center">
        <div class="icon-circle bg-pink-100">
          <i class="fas fa-rocket text-pink-500 text-2xl"></i>
        </div>
        <div class="text-sm text-pink-500 font-semibold mb-2"><%= t.phase3_label %></div>
        <h3 class="text-xl font-semibold mb-3"><%= t.phase3_title %></h3>
        <p class="text-gray-600 text-sm">
          <%= t.phase3_desc %>
        </p>
      </div>

      <!-- Phase 4 -->
      <div class="card bg-white p-8 rounded-xl text-center">
        <div class="icon-circle bg-orange-100">
          <i class="fas fa-chart-bar text-orange-500 text-2xl"></i>
        </div>
        <div class="text-sm text-orange-500 font-semibold mb-2"><%= t.phase4_label %></div>
        <h3 class="text-xl font-semibold mb-3"><%= t.phase4_title %></h3>
        <p class="text-gray-600 text-sm">
          <%= t.phase4_desc %>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- End-to-End Partnership -->
<section id="services" class="py-20">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4"><%= t.partnership_title %></h2>
