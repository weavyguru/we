          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <i class="fas fa-check-circle text-purple-500 mt-1"></i>
              <span class="text-gray-700"><%= t.cta_ready1 %></span>
            </li>
            <li class="flex items-start gap-3">
              <i class="fas fa-check-circle text-purple-500 mt-1"></i>
              <span class="text-gray-700"><%= t.cta_ready2 %></span>
            </li>
            <li class="flex items-start gap-3">
