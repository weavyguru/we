      </div>

      <!-- Market Validation -->
      <div class="card bg-white p-8 rounded-xl border border-gray-200">
        <div class="icon-circle bg-purple-100">
          <i class="fas fa-users text-purple-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold mb-3"><%= t.service2_title %></h3>
        <p class="text-gray-600">
          <%= t.service2_desc %>
        </p>
      </div>

      <!-- Growth Strategy -->
      <div class="card bg-white p-8 rounded-xl border border-gray-200">
        <div class="icon-circle bg-pink-100">
