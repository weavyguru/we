        </div>
        <h3 class="text-xl font-semibold mb-3"><%= t.service3_title %></h3>
        <p class="text-gray-600">
          <%= t.service3_desc %>
        </p>
      </div>

      <!-- Risk Mitigation -->
      <div class="card bg-white p-8 rounded-xl border border-gray-200">
        <div class="icon-circle bg-purple-100">
          <i class="fas fa-shield-alt text-purple-600 text-2xl"></i>
        </div>
        <h3 class="text-xl font-semibold mb-3"><%= t.service4_title %></h3>
        <p class="text-gray-600">
          <%= t.service4_desc %>
