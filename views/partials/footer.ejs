<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <!-- Logo and Tagline -->
      <div>
        <div class="flex items-center mb-4">
          <img src="/images/we-white.png" alt="we" class="h-8">
        </div>
        <p class="text-gray-400 text-sm">
          <%= f.tagline %>
        </p>
      </div>

      <!-- Process Links -->
      <div>
        <h4 class="font-semibold mb-4"><%= f.process_title %></h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li><a href="/<%= lang !== 'en' ? '?lang=' + lang : '' %>#process" class="hover:text-white transition"><%= f.process_approach %></a></li>
          <li><a href="/<%= lang !== 'en' ? '?lang=' + lang : '' %>#services" class="hover:text-white transition"><%= f.process_services %></a></li>
          <li><a href="/<%= lang !== 'en' ? '?lang=' + lang : '' %>#" class="hover:text-white transition"><%= f.process_partnership %></a></li>
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="font-semibold mb-4"><%= f.company_title %></h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li><a href="/<%= lang !== 'en' ? '?lang=' + lang : '' %>#about" class="hover:text-white transition"><%= f.company_about %></a></li>
          <li><a href="/faq<%= lang !== 'en' ? '?lang=' + lang : '' %>" class="hover:text-white transition"><%= f.company_faq %></a></li>
          <li><a href="/<%= lang !== 'en' ? '?lang=' + lang : '' %>#" class="hover:text-white transition"><%= f.company_contact %></a></li>
          <li><a href="/<%= lang !== 'en' ? '?lang=' + lang : '' %>#" class="hover:text-white transition"><%= f.company_cases %></a></li>
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h4 class="font-semibold mb-4"><%= f.legal_title %></h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li><a href="/<%= lang !== 'en' ? '?lang=' + lang : '' %>#" class="hover:text-white transition"><%= f.legal_privacy %></a></li>
          <li><a href="/<%= lang !== 'en' ? '?lang=' + lang : '' %>#" class="hover:text-white transition"><%= f.legal_terms %></a></li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 text-center text-gray-400 text-sm">
      <p>&copy; <%= f.copyright %></p>
    </div>
  </div>
</footer>
